@page "/projeto/incluir"
@inject ICpnucleoApiService cpnucleoApiService;
@inject NavigationManager navigationManager

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Inclus√£o de Projeto</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <EditForm class="form-horizontal" Model="@model" OnValidSubmit="@HandleValidSubmit">
                <DataAnnotationsValidator />

                @if (sistemas == null)
                {
                    <p><em>Carregando...</em></p>
                }
                else
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label"><DisplayName For="@(() => model.Nome)" /></label>
                        <div class="col-sm-10">
                            <InputText class="form-control" @bind-Value="model.Nome" placeholder="Nome" />
                            <ValidationMessage For="@(() => model.Nome)" />
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"><DisplayName For="@(() => model.IdSistema)" /></label>
                        <div class="col-sm-10">
                            <InputSelect class="form-control m-b" @bind-Value="model.IdSistema">
                                @foreach (var item in sistemas)
                                {
                                    <option value="@item.Id">@item.Nome</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => model.IdSistema)" />
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-white" role="button" href="/projeto/listar">Voltar</a>
                            <button class="btn btn-primary" type="submit">Incluir</button>
                        </div>
                    </div>
                }

            </EditForm>
        </div>
    </div>
</div>

@code {
    private ProjetoViewModel model = new ProjetoViewModel();
    private IEnumerable<SistemaViewModel> sistemas;

    protected override async Task OnInitializedAsync()
    {
        sistemas = await cpnucleoApiService.GetAsync<IEnumerable<SistemaViewModel>>("sistema", "");
        model.IdSistema = sistemas.FirstOrDefault().Id;
    }

    private async Task HandleValidSubmit()
    {
        await cpnucleoApiService.PostAsync<ProjetoViewModel>("projeto", "", model);

        navigationManager.NavigateTo("/projeto/listar");
    }
}