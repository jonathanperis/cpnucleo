<li class="@Tarefa.TipoTarefa.Element" data-toggle="modal" data-target="#modal-apontamento"
    data-nome-tarefa="@Tarefa.Nome" data-id-tarefa="@Tarefa.Id" data-id-recurso="@Tarefa.IdRecurso">
    @Tarefa.Nome
    <div class="agile-detail">
        <i class="fa fa-clock-o"></i> @Tarefa.DataTermino.ToString("dd/MM/yyyy")
        <div class="m-xxs m-l-none"><i class="fa fa-user"></i> #@Tarefa.Id criada por @Tarefa.Recurso.Nome</div>
        @if (Tarefa.HorasRestantes >= 0)
        {
            <text>
                <i class="fa fa-smile-o"></i> <font color="1ab394"> @Tarefa.HorasRestantes horas restantes</font>
            </text>
        }
        else
        {
            <text>
                <i class="fa fa-frown-o"></i><font color="ed5565"> @Tarefa.HorasRestantes.ToString().Replace("-", "") horas excedidas</font>
            </text>
        }
        <a href="#" class="pull-right btn btn-xs btn-white"> @Tarefa.Workflow.Nome</a>
    </div>
</li>

@code {
    [Parameter]
    public TarefaDto Tarefa { get; set; }
}
