@page "{id:Guid}"

@model Tarefa.RemoverModel
@{
    ViewData["Title"] = "Remoção de Tarefa";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            }

            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.Id"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Id)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.Nome"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.Nome">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.Projeto.Sistema"></label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Projeto.Sistema.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.IdProjeto"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.IdProjeto">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Projeto.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.DataInicio"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.DataInicio">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.DataInicio)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.DataTermino"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.DataTermino">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.DataTermino)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Tarefa.QtdHoras)<br><small class="text-navy">Horas</small></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.QtdHoras">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.QtdHoras)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.Detalhe"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.Detalhe">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Detalhe)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.IdTipoTarefa"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.IdTipoTarefa">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.TipoTarefa.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.IdWorkflow"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.IdWorkflow">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Workflow.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Tarefa.IdRecurso)<br><small class="text-navy">Criador da Tarefa</small></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.IdRecurso">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Recurso.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Tarefa.DataInclusao"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Tarefa.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.DataInclusao)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" role="button" asp-page="Listar">Voltar</a>
                        <button class="btn btn-primary" type="submit">Remover</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>