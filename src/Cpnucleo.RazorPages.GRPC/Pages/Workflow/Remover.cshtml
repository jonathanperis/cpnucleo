@page "{id:Guid}"

@model Workflow.RemoverModel
@{
    ViewData["Title"] = "Remoção de Workflow";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            }

            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Workflow.Id"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Workflow.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Workflow.Id)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Workflow.Nome"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Workflow.Nome">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Workflow.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(x => x.Workflow.Ordem)<br><small class="text-navy">Ordem no Kanban</small></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Workflow.Ordem">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Workflow.Ordem)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Workflow.DataInclusao"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Workflow.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Workflow.DataInclusao)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" role="button" asp-page="Listar">Voltar</a>
                        <button class="btn btn-primary" type="submit">Remover</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>