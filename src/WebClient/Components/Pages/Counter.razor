@page "/counter"

<PageTitle>Counter</PageTitle>

<Breadcrumb Items="_items" />

<MudCard Class="pa-4 ma-4" Elevation="1">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Counter</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>Current count: @_currentCount</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>
    </MudCardActions>    
</MudCard>

@code {
    private int _currentCount;

    private void IncrementCount()
    {
        _currentCount++;
    }

    private readonly List<BreadcrumbItem> _items =
    [
        new("Home", href: "#", icon: Icons.Material.Filled.Home),
        new("Counter", href: null, disabled: true)
    ];    
}