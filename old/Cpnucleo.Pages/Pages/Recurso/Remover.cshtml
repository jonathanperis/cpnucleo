@page "{idRecurso:int}"

@model Recurso.RemoverModel
@{
    ViewData["Title"] = "Remoção de Recurso";
}

@section Styles {
    <!-- iCheck -->
    <link href="~/css/plugins/iCheck/custom.css" rel="stylesheet">
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Recurso.IdRecurso"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Recurso.IdRecurso">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.IdRecurso)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Recurso.Nome"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Recurso.Nome">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Recurso.Ativo"></label>
                    <div class="col-sm-10">
                        <div class="i-checks">
                            <label> <input type="checkbox" asp-for="Recurso.Ativo" disabled="disabled"> <i></i> </label>
                        </div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Recurso.Login"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Recurso.Login">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.Login)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Recurso.DataInclusao"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Recurso.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.DataInclusao)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" role="button" asp-page="Listar">Voltar</a>
                        <button class="btn btn-primary" type="submit">Remover</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- iCheck -->
    <script src="~/js/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}